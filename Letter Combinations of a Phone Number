class Solution {
public:
    vector<string> letterCombinations(string digits) {
        string map[] = {"", " ", "abc", "def", "ghi", "jkl", "mno", "pqrs", "tuv", "wxyz"};
        vector<string> solutions;
        if (digits == "") return solutions;
        string result;
        Machine(digits,map,0,result,solutions);
        return solutions;
    }
    
    void Machine(string& digits, string map[], int deep, string& result, vector<string>& solutions){
        
        if (deep == digits.size()){
            solutions.push_back(result);
            return;
        }
        
        int CurDig = digits[deep]-48;
        
        for (int i=0;i<map[CurDig].size();i++){
            result.push_back(map[CurDig][i]);
            Machine(digits,map,deep+1,result,solutions);
            result.pop_back();
        }
    }
};
